// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model Search {
  id          Int           @id @default(autoincrement())
  name        String
  user_search User_Search[]
}

model User_Search {
  id       Int    @id @default(autoincrement())
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId   Int    @map("user_id")
  search   Search @relation(fields: [searchId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  searchId Int    @map("search_id")
}

model User {
  id          Int           @id @default(autoincrement())
  role        Role          @default(USER)
  name        String?
  password    String
  email       String        @unique
  phone       String?
  user_search User_Search[]
  cart        Cart?
  shelf       Shelf?
  order       Order[]
}

model Cart {
  id      Int      @id @default(autoincrement())
  total   Int      @default(0)
  Payment Payment?
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId  Int      @unique @map("user_id")
}

model Payment {
  id       Int      @id @default(autoincrement())
  method   String
  createAt DateTime @default(now()) @map("create_at")
  cart     Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  cartId   Int      @unique @map("cart_id")
}

model Shelf {
  id            Int          @id @default(autoincrement())
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId        Int          @unique @map("user_id")
  paid_product  Paid_Product @relation(fields: [paidProductId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  paidProductId Int          @map("paid_product_id")
}

model Paid_Product {
  id    Int     @id @default(autoincrement())
  url   Url     @relation(fields: [urlId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  urlId Int     @unique @map("url_id")
  shelf Shelf[]
}

model Url {
  id           Int           @id @default(autoincrement())
  link         String
  paid_product Paid_Product?
}

model Cart_Product {
  id        Int     @id @default(autoincrement())
  quantity  Int     @default(1)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  productId Int     @map("product_id")
}

model Product {
  id             Int              @id @default(autoincrement())
  name           String
  img            String
  price          Int
  author         String
  publisher      String
  category       Category         @relation(fields: [categoryId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  categoryId     Int              @map("category_id")
  cart_product   Cart_Product[]
  product_status Product_Status[]
  order_Product  Order_Product[]
}

model Category {
  id      Int       @id @default(autoincrement())
  name    String
  product Product[]
}

enum ProductStatus {
  PAID
  UNPAID
  CANCELED
}

model Product_Status {
  id        Int           @id @default(autoincrement())
  status    ProductStatus @default(UNPAID)
  product   Product       @relation(fields: [productId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  productId Int           @map("product_id")
}

model Order {
  id            Int             @id @default(autoincrement())
  total         Int             @default(0)
  createAt      DateTime        @default(now()) @map("create_at")
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId        Int             @map("user_id")
  order_Product Order_Product[]
}

model Order_Product {
  id        Int     @id @default(autoincrement())
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  orderId   Int     @map("order_id")
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  productId Int     @map("product_id")
}
